{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug roofer-app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/vcpkg-minimal/apps/roofer-app/roofer",
            "args": [
                // Add your command line arguments here
                // Example: "--config", "example.toml"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VCPKG_ROOT",
                    "value": "/home/codespace/vcpkg"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-vcpkg-minimal"
        },
        {
            "name": "Debug roofer-app (gh-Linux build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/gh-Linux/apps/roofer-app/roofer",
            "args": [
                // Add your command line arguments here
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VCPKG_ROOT",
                    "value": "/home/codespace/vcpkg"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-gh-Linux"
        },
        {
            "name": "Attach to running process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/out/build/vcpkg-minimal/apps/roofer-app/roofer",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}